<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputActivity">

    <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/input_text"
            android:text="@string/hello"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"/>

    <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_text"
            app:layout_constraintVertical_bias="0.1"
            android:id="@+id/input_text2"
            android:text="@string/what_do_you_want_to_do_today"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"/>

    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/input_text2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/button_input_journal"
            android:background="@drawable/border"
            android:text="@string/complete_today_s_journal_entry"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/input_text2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:id="@+id/button_input_dashboard"
            android:background="@drawable/border"
            android:text="@string/view_dashboard"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/button_input_journal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/button_input_recommendations"
            android:background="@drawable/border"
            android:text="@string/view_your_recommendations"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/button_input_dashboard"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:id="@+id/button_input_settings"
            android:background="@drawable/border"
            android:text="@string/change_settings_and_consent_options"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

