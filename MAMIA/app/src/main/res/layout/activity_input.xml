<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputActivity">

    <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/myName"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"/>

    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myName"
            app:layout_constraintVertical_bias="0.1"
            android:id="@+id/welcomeText"
            android:text="@string/what_do_you_want_to_do"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="22sp"
            />

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:id="@+id/button_input_fitbit"
            android:background="@drawable/border"
            android:text="Fitbit Entry"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>


    <Button
            android:layout_width="300dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_input_fitbit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/button_input_journal"
            android:background="@drawable/border"
            android:text="@string/journal"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_input_journal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/button_input_dashboard"
            android:background="@drawable/border"
            android:text="@string/dashboard"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

    <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/button_input_dashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:id="@+id/button_input_recommendations"
            android:background="@drawable/border"
            android:text="@string/recommendations"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

<!--    </androidx.gridlayout.widget.GridLayout>-->





</androidx.constraintlayout.widget.ConstraintLayout>