<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IntroActivity4">

    <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/intro4_text"
            android:text="@string/the_first_day_of_your_lmp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="26sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.1"/>

    <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intro4_calendar"
            tools:layout_editor_absoluteY="315dp"
            tools:layout_editor_absoluteX="20dp"
            app:layout_constraintTop_toBottomOf="@+id/intro4_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_calendar"
            />

    <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/intro4_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/button4"
            android:background="@drawable/border"
            android:text="@string/next"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:backgroundTint="@color/red_1"
            tools:ignore="UsingOnClickInXml"/>

    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/lmp_definition"
            tools:text="The first day of your LMP, or last menstrual period, helps us know what trimester you are in :)"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>